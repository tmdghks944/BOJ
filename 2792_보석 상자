#include <iostream>
#include <cstdio>
#include <string>
#include <string.h>
#include <stdio.h>
#include <algorithm>
#include <functional>
#include <cstring>
#include <climits>
#include <vector>
#include <stack>
#include <queue>
#include <list>
#include <map>
#include <set>
 
using namespace std;
typedef long long ll;
ll n, m;
ll arr[300001];
ll solution(ll start, ll end)
{
    if (end - start <= 1)    return end;
    ll mid = (start + end) / 2;
    ll cnt = 0;
    for (ll i = 0; i < m; i++)
    {
        if (arr[i] % mid != 0)
            cnt += (arr[i] / mid) + 1;
        else
            cnt += arr[i] / mid;
    }
    if (cnt <= n)
        return solution(start,mid);
    else
        return solution(mid,end);
}
int main()
{
#ifdef _CONSOLE
    freopen("input.txt", "r", stdin);
#endif
    scanf("%d%d", &n, &m);
    ll maxx = 0;
    for (int i = 0; i < m; i++) {
        scanf("%lld", &arr[i]);
        maxx = max(maxx, arr[i]);
    }
    cout << solution(0, maxx) << endl;
}
